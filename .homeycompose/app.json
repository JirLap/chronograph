{
	"id": "nl.fellownet.chronograph_debug",
	"version": "1.1.2",
	"compatibility": ">=2.1.0",
	"sdk": 2,
	"name": {
		"en": "Chronograph Debug"
	},
	"description": {
		"en": "Adds precise timer, stopwatch and transition functionality to Homey.",
		"nl": "Voegt accurate timer, stopwatch en transitie functionaliteit toe aan Homey.",
		"de": "Fügt Homey präzise Timer, Stoppuhrfunktionen und Übergänge hinzu."
	},
	"brandColor": "#5583C3",
	"category": [
		"tools"
	],
	"tags": {
		"en": [
			"timer",
			"countdown",
			"stopwatch",
			"transitions",
			"chronograph",
			"hourglass"
		],
		"nl": [
			"timer",
			"countdown",
			"stopwatch",
			"transities",
			"chronograph",
			"zandloper"
		],
		"de": [
			"timer",
			"countdown",
			"stoppuhr",
			"übergänge",
			"chronograph",
			"sanduhr"
		]
	},
	"homeyCommunityTopicId": 18214,
	"permissions": [],
	"images": {
		"large": "/assets/images/large.png",
		"small": "/assets/images/small.png"
	},
	"author": {
		"name": "Fellownet",
		"email": "bob@fellownet.nl"
	},
	"contributing": {
		"donate": {
			"paypal": {
				"username": "bobkersten"
			}
		}
	},
	"contributors": {
		"developers": [
			{
				"name": "Bob Kersten",
				"email": "bob@fellownet.nl"
			}
		]
	},
	"drivers": [
		{
			"id": "timer_driver",
			"name": {
				"en": "Timer"
			},
			"settings": [
				{
					"type": "group",
					"label": {
						"en": "Timer",
						"nl": "Timer"
					},
					"children": [
						{
							"id": "name",
							"type": "text",
							"label": {
								"en": "Name",
								"nl": "Naam"
							},
							"hint": {
								"en": "The name of the timer this device controls.",
								"nl": "De naam van de timer die door dit apparaat wordt bestuurd."
							}
						}
					]
				}
			],
			"images": {
				"large": "drivers/timer_driver/assets/images/large.png",
				"small": "drivers/timer_driver/assets/images/small.png"
			},
			"class": "sensor",
			"capabilities": [ "alarm_running", "duration", "onoff.0" ],
			"capabilitiesOptions": {
				"alarm_running": {
					"preventTag": true
				},
				"duration": {
					"preventTag": true
				},
				"onoff.0": {
					"title":{
						"en": "Start / Stop",
						"nl": "Starten / Stoppen"
					},
					"preventTag": true,
					"preventInsights": true
				}
			},
			"pair": [
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_devices"
					},
					"options": {
						"singular": true
					}
				},
				{
					"id": "add_devices",
					"template": "add_devices"
				}
			]
		},
		{
			"id": "stopwatch_driver",
			"name": {
				"en": "Stopwatch"
			},
			"settings": [
				{
					"type": "group",
					"label": {
						"en": "Timer",
						"nl": "Timer"
					},
					"children": [
						{
							"id": "name",
							"type": "text",
							"label": {
								"en": "Name",
								"nl": "Naam"
							},
							"hint": {
								"en": "The name of the stopwatch this device controls.",
								"nl": "De naam van de stopwatch die door dit apparaat wordt bestuurd."
							}
						}
					]
				}
			],
			"images": {
				"large": "drivers/stopwatch_driver/assets/images/large.png",
				"small": "drivers/stopwatch_driver/assets/images/small.png"
			},
			"class": "sensor",
			"capabilities": [ "alarm_running", "duration", "onoff.0" ],
			"capabilitiesOptions": {
				"alarm_running": {
					"preventTag": true
				},
				"duration": {
					"preventTag": true
				},
				"onoff.0": {
					"title":{
						"en": "Start / Stop",
						"nl": "Starten / Stoppen"
					},
					"preventTag": true,
					"preventInsights": true
				}
			},
			"pair": [
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_devices"
					},
					"options": {
						"singular": true
					}
				},
				{
					"id": "add_devices",
					"template": "add_devices"
				}
			]
		}
	]
}
