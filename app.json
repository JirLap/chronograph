	"flow": {
		"triggers": [
			{
				"id": "timer_random_started",
				"title": {
					"en": "A timer has started",
					"nl": "Een timer is gestart"
				},
				"titleFormatted": {
					"en": "Timer [[name]] has started",
					"nl": "Timer [[name]] is gestart"
				},
				"hint": {
					"en": "Use this card to create a Flow that is activated when the timer with the provided name has started.",
					"nl": "Gebruik dit kaartje om een Flow te maken die geactiveerd wordt als de timer met de ingevoerde naam wordt gestart."
				},
				"args": [
					{
						"name": "name",
						"title": {
							"en": "Name of the timer",
							"nl": "Naam van de timer"
						},
						"type": "text",
						"placeholder": {
							"en": "Name",
							"nl": "Naam"
						}
					}
				],
				"tokens": [
					{
						"name": "name",
						"type": "string",
						"title": {
							"en": "Name",
							"nl": "Naam"
						}
					},
					{
						"name": "seconds",
						"type": "number",
						"title": {
							"en": "Duration",
							"nl": "Looptijd"
						}
