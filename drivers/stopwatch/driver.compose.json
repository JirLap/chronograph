{
	"id": "stopwatch",
	"name": {
		"en": "Stopwatch",
		"nl": "Stopwatch",
		"de": "Stoppuhr"
	},
	"images": {
		"large": "{{driverAssetsPath}}/images/large.png",
		"small": "{{driverAssetsPath}}/images/small.png"
	},
	"class": "sensor",
	"capabilities": [ "alarm_started", "duration", "button.pause", "button.stop" ],
	"capabilitiesOptions": {
		"alarm_started": {
			"preventTag": true
		},
		"duration": {
			"preventTag": true
		},
		"button.pause": {
			"title": {
				"en": "Pause / Resume",
				"nl": "Pauzeren / Hervatten"
			}
		},
		"button.stop": {
			"title": {
				"en": "Stop",
				"nl": "Stoppen"
			}
		}
	},
	"pair": [
		{
			"id": "list_devices",
			"template": "list_devices",
			"navigation": {
				"next": "add_devices"
			},
			"options": {
				"singular": true
			}
		},
		{
			"id": "add_devices",
			"template": "add_devices"
		}
	]
}
