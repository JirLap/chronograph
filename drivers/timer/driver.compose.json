{
  "id": "timer",
  "name": {
    "en": "Timer",
    "nl": "Timer",
    "de": "Timer"
  },
  "images": {
    "large": "{{driverAssetsPath}}/images/large.png",
    "small": "{{driverAssetsPath}}/images/small.png"
  },
  "class": "sensor",
  "capabilities": ["started", "measure_duration", "button.pause", "button.stop"],
  "capabilitiesOptions": {
    "started": {
      "preventTag": true
    },
    "measure_duration": {
      "preventTag": true
    },
    "button.pause": {
      "title": {
        "en": "Pause / Resume",
        "nl": "Pauzeren / Hervatten"
      }
    },
    "button.stop": {
      "title": {
        "en": "Stop",
        "nl": "Stoppen"
      }
    }
  },
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      },
      "options": {
        "singular": true
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ]
}
